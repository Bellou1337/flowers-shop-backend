generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

enum UserRole {
  USER
  ADMIN
}

model User {
  id             String   @id @default(uuid())
  email          String   @unique
  hashedPassword String
  name           String
  phone          String
  role           UserRole @default(USER)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
